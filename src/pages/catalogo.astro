---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import CatalogoApp from "../components/CatalogoApp";
---

<Layout title="Catálogo - KanekMed">
  <Header simple={true} />

  <main class="min-h-screen bg-slate-50/50 pt-8 pb-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-10">
        <nav class="flex mb-4 text-sm text-slate-500">
          <a href="/" class="hover:text-blue-600">Inicio</a>
          <span class="mx-2">/</span>
          <span class="text-slate-800 font-medium">Catálogo</span>
        </nav>
        <h1 class="text-4xl font-extrabold text-slate-900 tracking-tight mb-2">
          Catálogo de Medicamentos
        </h1>
        <p class="text-lg text-slate-600">
          Gestiona tus productos y genera cotizaciones profesionales en
          segundos.
        </p>
      </div>

      <CatalogoApp client:load />
    </div>
  </main>

  <footer class="bg-white border-t border-slate-200 py-12">
    <div class="max-w-7xl mx-auto px-4 text-center">
      <p class="text-slate-500">
        &copy; 2026 KanekMed. Tu aliado en insumos médicos.
      </p>
    </div>
  </footer>
</Layout>
