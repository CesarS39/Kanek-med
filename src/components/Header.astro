---
const { simple = false } = Astro.props;
---

<header
  class="bg-white/80 backdrop-blur-md border-b border-slate-100 sticky top-0 z-50"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <a href="/" class="group flex items-center space-x-3">
        {/* Contenedor del Logo */}
        <div
          class="relative w-12 h-12 flex items-center justify-center group-hover:scale-105 transition-transform duration-300"
        >
          {/* Sombra suave de fondo para resaltar el logo */}
          <div
            class="absolute inset-0 bg-blue-100/50 rounded-xl blur-lg opacity-0 group-hover:opacity-100 transition-opacity"
          >
          </div>

          <img
            src="/kanek-med.png"
            alt="Kanek Med Logo"
            class="relative w-full h-full object-contain"
          />
        </div>

        {/* Texto de la Marca */}
        <span class="text-2xl font-extrabold tracking-tight text-slate-800">
          Kanek<span class="text-blue-600">Med</span>
        </span>
      </a>

      {
        !simple && (
          <nav class="hidden md:flex items-center space-x-10">
            <a
              href="/#inicio"
              class="text-sm font-semibold text-slate-600 hover:text-blue-600 transition-colors"
            >
              Inicio
            </a>
            <a
              href="/#beneficios"
              class="text-sm font-semibold text-slate-600 hover:text-blue-600 transition-colors"
            >
              Beneficios
            </a>
            <a
              href="/catalogo"
              class="bg-slate-900 text-white px-6 py-2.5 rounded-full font-medium hover:bg-blue-600 hover:shadow-lg hover:shadow-blue-200 transition-all active:scale-95"
            >
              Ver Cat√°logo
            </a>
          </nav>
        )
      }
    </div>
  </div>
</header>
